{% extends "bundle://adm/view/layout/master.peb" %}

{% block content %}

<div class="container-fluid">
    <div class="page-header">
        <h1>REST Routes</h1>
    </div>

    <div class="page-actions">
        <a class="btn btn-primary" href="/application.wadl">
            <i class="fa fa-file-code-o"></i> Application WADL
        </a>
    </div>

    {% if routes is empty %}
        <p class="msg bg-info"><i class="fa fa-info-circle"></i> Lack of routes.</p>
    {% else %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>URI</th>
                <th>Parameters</th>
                <th>Method</th>
                <th>Names</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for route in routes %}
                <tr>
                    <th scope="row">{{ loop.index + 1 }}</th>
                    <td>
                        {% if (route.parameters is empty) and (route.method == "GET") %}
                            <a href="{{ route.path }}">{{ route.path }}</a>
                        {% else %}
                            {{ route.path }}
                        {% endif %}
                    </td>
                    <td>
                        {% if route.parameters is not empty %}
                            {{ route.parameters | join(', ') }}
                        {% else %}
                            &mdash;
                        {% endif %}
                    </td>
                    <td>{{ route.method }}</td>
                    <td>
                        {% if route.names is not empty %}
                            {{ route.names | join(', ') }}
                        {% else %}
                            &mdash;
                        {% endif %}
                    </td>
                    <td>{{ route.action }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>

{% endblock %}